FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

momentumSource
{
    type            meanVelocityForce;
    active          off;            //on/off switch

    meanVelocityForceCoeffs
    {
        selectionMode   all;       //cellSet // points //cellZone
        fields  (U);
        Ubar        ( 0 0.11 0 );
        relaxation  1.0;
    }
}


